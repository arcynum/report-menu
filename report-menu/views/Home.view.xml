<?xml version="1.0"?>
<mvc:View
	xmlns="sap.m"
	xmlns:template="sap.ui.core.template"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	controllerName="report-menu.controllers.Home">

	<Page title="{i18n&gt;home.title}">
		<content>
			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title text="{ReportModel&gt;/reports/0/title}" />
						<ToolbarSpacer />
						<Button text="Open Report" icon="{ReportModel&gt;/reports/0/icon}" />
					</Toolbar>
				</headerToolbar>
				<content>
					<Text text="{ReportModel&gt;/reports/0/description}" />
					<List headerText="Key Sections" items="{ReportModel&gt;/reports/0/sections}">
						<StandardListItem type="Active" title="{ReportModel&gt;title}" description="{ReportModel&gt;description}" press="onTilePress" />
					</List>
				</content>
			</Panel>
		</content>
	</Page>

</mvc:View>